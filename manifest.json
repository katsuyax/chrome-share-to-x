{
  "manifest_version": 3,
  "name": "Share to X",
  "version": "1.1.0",
  "description": "今開いているページをX（旧Twitter）にシェアします。",
  "permissions": ["activeTab"],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Xにシェア"
  },
  "background": {
    "service_worker": "background.js"
  }
}
